# DO NOT EDIT THIS FILE BY HAND!
# If you need to add an address, put it in /etc/hosts.local and run the chef-client
127.0.0.1	localhost.localdomain	localhost
<% if node[:kernel][:modules][:ipv6] %>
::1		localhost.localdomain	localhost
<% end %>
<%= node[:ipaddress] %>	<%= node[:fqdn] %>	<%= node[:hostname] %> # Autogenerated from node data
<% @entries.each do | entry | -%>
<%= entry[:ip] %>	<%= entry[:fqdn] %>	<%= entry[:aliases].join(" ") %><%= " # #{entry[:comment]}" unless entry[:comment].empty? %>
<% end unless @entries.nil? -%>
<%= @localdata %>
